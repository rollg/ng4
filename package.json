{
  "name": "ng4Base",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --prod --aot",
    "test": "ng test",
    "ci-test": "ng test --watch false --single-run true",
    "test:coverage": "ng test --watch false --single-run true --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:stat": "ng build --prod --stats-json",
    "bundle-report": "webpack-bundle-analyzer dist/stats.json",
    "build:stat:show": "npm run build:stat && npm run bundle-report",
    "validate": "npm run format && npm run scss-lint && npm run lint && npm run ci-test",
    "format": "clang-format -i -style=file --glob=src/**/*.ts && clang-format -i -style=file --glob=e2e/**/*.ts --glob=e2e/**/*.ts",
    "scss-lint": "sass-lint -c -v --max-warnings 0",
    "server-mock": "node server-mock/server.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "4.1.3",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/material": "2.0.0-beta.6",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "core-js": "^2.4.1",
    "lodash": "4.17.4",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@types/jasmine": "2.5.38",
    "@types/node": "~6.0.60",
    "clang-format": "^1.0.52",
    "codelyzer": "~2.0.0",
    "faker": "4.1.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "json-server": "0.10.1",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.0",
    "sass-lint": "^1.10.2",
    "ts-node": "~2.0.0",
    "tslint": "~4.5.0",
    "typescript": "~2.2.0",
    "webpack-bundle-analyzer": "2.8.2"
  },
  "main": "main.ts",
  "repository": "https://github.com/rollg/ng4",
  "author": "<maildevcom@gmail.com>"
}
